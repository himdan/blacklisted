{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
  <div id="fos_user_registration_form" >
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon1">Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <input class="form-control" aria-describedby="sizing-addon1" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" type="email">
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon2">Username&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <input class="form-control" aria-describedby="sizing-addon2" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="255" pattern=".{2,}" type="text">
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon3">Password&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <input class="form-control" aria-describedby="sizing-addon3" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" type="password">
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon4">Repeat password</span>
            <input class="form-control" aria-describedby="sizing-addon4" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" type="password">
        </div>
        <input id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{ form.children._token.vars.value }}" type="hidden">
        <div class="input-group">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn"/>
    </div>    
    </div>
    </form>
