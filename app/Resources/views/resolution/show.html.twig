{% extends 'frontoffice.html.twig' %}

{% block content %}
   <div class="container">
        <div class="jumbotron">
            <h1>Resolutions</h1>

            <h2> Show resolutions</h2>
        </div>

    <div class="row">
    <div class="col-lg-12">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resolution.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ resolution.status }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{% if resolution.createdAt %}{{ resolution.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Solved At</th>
                <td>{% if resolution.solvedAt %}{{ resolution.solvedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-default" href="{{ path('resolution_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('resolution_edit', { 'id': resolution.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
    </div>
   </div>
{% endblock %}
